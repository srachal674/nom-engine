<div id="carouselExampleIndicators" class="carousel slide center" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
  </ol>

  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'Slide-1.jpg', class: 'img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        <h3>Food trucks offer food from around the country and local brews.</h3>
      </div>
    </div>

    <div class="carousel-item">
      <%= image_tag 'Slide-2.jpg', class: 'img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        <h3>Moon over Camelback Mountain</h3>
      </div>
    </div>

    <div class="carousel-item">
      <%= image_tag 'Slide-3.jpg', class: 'img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        <h3>Room for everyone, join us.</h3>
      </div>
    </div>

    <div class="carousel-item">
      <%= image_tag 'Slide-4.jpg', class: 'img-fluid' %>
       <div class="carousel-caption d-none d-md-block">
        <h3>Sunset over Tempe Town Lake</h3>
      </div>
    </div>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>

  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br />
    <p><%= place.description %></p><br />

   
  <% if place.comments.present? %>
    <div class="col-12 float-left">
      <blockquote>
        <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
        <% end %>
        <%= place.comments.last.message %> &nbsp
        <small><%= place.comments.last.user.email %></small>
      </blockquote>
    </div>
    <% end %>
  
 <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

  </div>
  <% end %>


<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @places %>
    </div>
    <%= will_paginate @places, :container => false %>
</div>